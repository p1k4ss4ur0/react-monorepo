{
  "name": "react-monorepo",
  "version": "1.0.0",
  "description": "A React monorepo with packages that I often use.",
  "main": "index.js",
  "repository": "https://github.com/p1k4ss4ur0/react-monorepo.git",
  "author": "Tiago Onofre <tiagoonofre335@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "backend": "yarn workspace @react-monorepo/backend start",
    "mobile": "yarn workspace @react-monorepo/mobile start",
    "web": "yarn workspace @react-monorepo/web start"
  },
  "workspaces": {
    "packages": [
      "packages/backend",
      "packages/mobile",
      "packages/web"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/mobile",
      "**/mobile/**",
      "**/web",
      "**/web/**"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0-alpha.138"
  }
}
